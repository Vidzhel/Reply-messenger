<UserControl x:Class="UI.UserControls.ChatUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.UserControls"
             
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="974">
    
    <Grid Background="{StaticResource GrayBGBrush}">

        <Grid.RowDefinitions>

            <!--Chat info bar-->
            <RowDefinition Height="Auto"/>
            
            <!--space for Message--> 
            <RowDefinition Height="*"/>
            
            <!--Bar for typing messages-->
            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions> 
       
        <!--Chat info bar-->
        <Grid>
            <Border VerticalAlignment="Top"
                    Margin="20 20 20 0"
                    Height="45"
                    Background="{StaticResource DarkBgBrush}"
                    CornerRadius="7">

                <Grid>
                    <Grid.ColumnDefinitions>

                        <!--Photo circle-->
                        <ColumnDefinition Width="auto"/>
                        
                        <!--User info-->
                        <ColumnDefinition Width="*"/>
                        
                        <!--Buttons-->
                        <ColumnDefinition Width="auto"/>

                    </Grid.ColumnDefinitions>

                    <!--Photo circle-->
                    <Grid Margin="20 3 0 3">

                        <!--Photo-->
                        <Border Name="Photo"  Height="35" Width="35" Background="{StaticResource GrayBGBrush}" CornerRadius="25"/>

                    </Grid>

                    <!--User info-->
                    <StackPanel Margin="20 3 0 3" Grid.Column="1" Orientation="Vertical">

                        <!--User Name-->
                        <Label Content="Anaiya Harrington"
                               Foreground="{StaticResource LightGrayBgBrush}"
                               FontWeight="DemiBold"
                               FontSize="13"/>
                        
                        <!--Last Time online-->
                        <Label Content="Online" Margin="0 -10 0 0" FontSize="10" Foreground="{StaticResource MiddleGrayBgBrush}"/>

                    </StackPanel>

                    <!--Additional buttons-->
                    <StackPanel Grid.Column="2" Margin="0 0 10 0" Orientation="Horizontal">

                        <Border Height="25"
                                Width="25"
                                Background="{StaticResource GrayBGBrush}"
                                CornerRadius="15"
                                Margin="5 0 5 0"/>
                        
                        <Border Height="25"
                                Width="25"
                                Background="{StaticResource GrayBGBrush}"
                                CornerRadius="15"
                                Margin="5 0 5 0"/>
                        
                        <Border Height="25"
                                Width="25"
                                Background="{StaticResource GrayBGBrush}"
                                CornerRadius="15"
                                Margin="5 0 5 0"/>

                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!--MessageList-->
        <local:MessageList Grid.Row="1" Margin="20 0 20 0"/>

        <!--typing Bar -->
        <Grid Grid.Row="2">

            <Border VerticalAlignment="Top"
                    Margin="20 0 20 20"
                    MinHeight="45"
                    MaxHeight="200"
                    Background="{StaticResource DarkBgBrush}"
                    CornerRadius="7">

                <Grid>

                    <Grid.ColumnDefinitions>

                        <!--Attachments-->
                        <ColumnDefinition Width="auto"/>
                        
                        <!--TextBox-->
                        <ColumnDefinition Width="*"/>
                        
                        <!--Send button-->
                        <ColumnDefinition Width="auto"/>

                    </Grid.ColumnDefinitions>

                    <!--Attachments-->
                    <Button Margin="20 10 0 10"
                            VerticalAlignment="Bottom"
                            Content=""
                            FontSize="20"
                            Style="{StaticResource IconicButton}"
                            />

                    <!--Typing box-->
                    <TextBox Grid.Column="1"
                             Style="{StaticResource MessageTypingBox}"
                             TextWrapping="Wrap"
                             />
                   
                    <!--Buttons-->
                    <StackPanel Margin="20 0 20 0" VerticalAlignment="Bottom" Grid.Column="2">

                        <!--Send-->
                        <Button Content=""
                                Style="{StaticResource IconicButton}"
                                FontSize="20"
                                Margin="0 10 0 10"
                                FontWeight="Black"
                                Foreground="{StaticResource LightBlueBrush}"/>

                    </StackPanel>
                </Grid>
                
            </Border>

        </Grid>
    </Grid>
</UserControl>
